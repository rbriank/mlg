<h1>Listing people</h1>

<table id="people">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Verified</th>
      <th colspan="3">
        <%= form_tag people_path, :method => :get, :remote => true do %>
          Search <%= text_field_tag :named, params[:named] %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <%= render @people %>
  </tbody>
</table>

<br />

<%= link_to 'New Person', new_person_path %>

<% content_for :javascripts do %>
  <script type="text/javascript">
    $(document).ready(function(){
      $('#named').keypress(function(e){
        if(e.which == 13){
          $('form').submit();
        }
      });
    });
  </script>
<% end %>